import sqlite3

conn = sqlite3.connect("db/rochinha_aprendizado_completo.db")
c = conn.cursor()

# Tabela para sinais registrados
c.execute("""
    CREATE TABLE IF NOT EXISTS sinais_registrados (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        jogo TEXT,
        mercado TEXT,
        odd REAL,
        ev REAL,
        confianca REAL,
        modo TEXT,
        timestamp TEXT
    )
""")

# Tabela para padrão de odds
c.execute("""
    CREATE TABLE IF NOT EXISTS historico_odds (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        casa TEXT,
        mercado TEXT,
        odd REAL,
        probabilidade REAL,
        ev REAL,
        timestamp TEXT
    )
""")

conn.commit()
conn.close()
print("✅ Banco de dados criado com sucesso.")
